<!DOCTYPE html>
<html lang="en">

  <%- include('partials/header.ejs') %>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    <%- include('partials/hotelsidebar.ejs') %>

    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <%- include('partials/navbar.ejs') %>

        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Categories</h1>
            </div>

          <!-- Content Row -->
          <div class="container">
            <a href="/hotel/addnewcategory" class="btn btn-primary btn-icon-split mb-3">
              <span class="icon text-white-50">
                <i class="fas fa-plus"></i>
              </span>
              <span class="text">Add new category</span>
            </a>
            <div class="card shadow mb-4">
              <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">All Categories</h6>
                <%if(updated){%>
                  <div class="<%=alertClass %>" role="alert">
                   Category Status Updated Successfully
                 </div>
                 
                  <%}%>
               </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                      <tr>
                       
                        <th>Id</th>
                        <th>Category</th>
                        <th>Edit</th>
                        <th>Delete</th>
                        
                      </tr>
                    </thead>
                    <tfoot>
                      <tr>
                        <th>Id</th>
                        <th>Category</th>
                        <th>Edit</th>
                        <th>Delete</th>
                       
                      </tr>
                    </tfoot>
                    <tbody>
                     
                      <%if(iscatresponse){%>
                     <% for(i=0;i<id.length;i++){ %>
                      <tr>
                        <th><%=i+1%></th>
                        <th><%=name[i]%></th>
                        
                     <td><a href="/hotel/editcategory?id=<%=id[i]%>"> <i class="fas fa-edit"></i></a></td>
                      <td> <button  class="btn" href="#" data-laborid="<%=id[i]%>" data-toggle="modal" data-target="#deletemodal"><i class="fas fa-times"></i></td>
                      </button>
                      <td>
                      
                      </tr>
                      <div class="modal fade" id="deletemodal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5 class="modal-title" id="exampleModalLabel">Are you sure.?</h5>
                              <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">Ã—</span>
                              </button>
                            </div>
                            <form action="/hotel/delcategory" method="POST">
                            <div class="modal-body">Following category will be deleted.?
                              <input type="hidden" name="labor" id="labor_id" value="">
                            </div>
                            <div class="modal-footer">
                              <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                              <button type="submit"  class="btn btn-primary" >Delete</i></td>
                              </button>
                            </div>
                          </form>
                            
                          </div>
                        </div>
                      </div>
                     <%}%>
                     <%}%>
                    </tbody>
                  </table>
                
                </div>
              </div>
            </div>
          
         
          </div>

     
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <footer class="sticky-footer bg-white">
        <div class="container my-auto">
          <div class="copyright text-center my-auto">
            <span>Copyright &copy;Karigary Admin Portal 2020</span>
          </div>
        </div>
      </footer>
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <%- include('partials/logoutmodal.ejs') %>

  <!-- Bootstrap core JavaScript-->
  <%- include('partials/footer.ejs') %>
  <script>
    console.log("LABOR ID = "+labor_id);
      
    $("#deletemodal").on('show.bs.modal',function(event){
      var button = $(event.relatedTarget);
      var labor_id = button.data('laborid');
      
      var modal = $(this);

      modal.find('.modal-body #labor_id').val(labor_id);
    });
  </script>
</body>

</html>
