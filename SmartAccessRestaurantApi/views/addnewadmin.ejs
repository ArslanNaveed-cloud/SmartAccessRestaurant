<!DOCTYPE html>
<html lang="en">

  <%- include('partials/header.ejs') %>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    <%- include('partials/sidebar.ejs') %>

    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <%- include('partials/navbar.ejs') %>

        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Admins</h1>
            </div>

          <!-- Content Row -->
          <div class="container">
            <% if(shouldShowAlert) { %>
                <div class="<%=alertClass %>" role="alert">
                     <%= message %>
                  </div>
              <% }else{
                
              } %>
            <form  action="/admin/addnewadmin" method="POST" class="w-50">
               
               
               
                <div class="form-group">
                    
                    <label for="title">Name*:</label>
                    <input type="text" name="name" id="name" class="form-control" value="<%= name %>" placeholder="Enter admin name" required>
                </div><!-- ////////////////////1st field////////////-->
                <div class="form-group">
                    
                    <label for="title">Email*:</label>
                    <input type="email" name="email" id="email" class="form-control" value="<%= email %>" placeholder="Enter admin email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" required>
                </div><!-- ////////////////////1st field////////////-->
                <hr>
                
                <div class="form-group">
                    
                  <label for="address">Phone*:(format: xxxx-xxxxxxx)</label>
                  <input id="phonenum" name="phone" class="phone form-control" type="tel" pattern="^\d{4}-\d{7}$" maxlength="12" placeholder="Enter phone number" value="<%= phone%>" required >

              </div><!-- ////////////////////1st field////////////-->
                <hr>
               
                <div class="form-group">
                    <label for="city">Select Category</label>
                    <select class="form-control" id="category" name="category" required>
                        <option value="" disabled selected>Select a category</option>
                        <option value="Main Admin" >Main Admin</option>
                        <option value="Sub Admin">Sub Admin</option>
                        
                      </select>
      </div>
<hr>
<div class="form-group">
                    
  <label for="password">Password*:</label>
  <input type="password" name="password" id="password" class="form-control" minlength="8" placeholder="Enter password" required>
</div>
<div class="form-group">
                    
  <label for="repassword">Retype password*:</label>
  <input type="password" name="repassword" id="repassword" class="form-control" minlength="8" placeholder="Enter password again" required>
</div><!-- ////////////////////1st field////////////-->
<hr>       
                <input type="submit" value="Add Admin" name="submit" class="btn btn-primary mt-2" >
               
            </form>
          </div>

     
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <footer class="sticky-footer bg-white">
        <div class="container my-auto">
          <div class="copyright text-center my-auto">
            <span>Copyright &copy;Karigary Admin Portal 2020</span>
          </div>
        </div>
      </footer>
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <%- include('partials/logoutmodal.ejs') %>

  <!-- Bootstrap core JavaScript-->
  <%- include('partials/footer.ejs') %>
 
</body>

</html>
