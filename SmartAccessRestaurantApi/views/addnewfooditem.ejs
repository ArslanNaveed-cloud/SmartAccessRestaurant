<!DOCTYPE html>
<html lang="en">

  <%- include('partials/header.ejs') %>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    <%- include('partials/hotelsidebar.ejs') %>

    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <%- include('partials/navbar.ejs') %>

        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Restaurants</h1>
            </div>

          <!-- Content Row -->
          <div class="container">
            <% if(shouldshowalert) { %>
                <div class="<%=alertClass %>" role="alert">
                     <%= message %>
                  </div>
              <% }else{%>
                <%
            }%>
            <form  enctype = "multipart/form-data" action="/hotel/addnewfooditem" method="POST" class="w-50">
               
               
               
                <div class="form-group">
                    
                    <label for="title">Title*:</label>
                    <input type="text" name="title" id="title" class="form-control" value="<%= name %>" placeholder="Enter Food Item name" required>
                </div>
                <div class="form-group">
                    <div class="form-group">
                        <label for="category">Select Category</label>
                        <select class="form-control" id="category" name="category" required>
                           <%if(iscategoryresponse){%>
                            <option value="" disabled selected>Select a Category</option>
                          
                            <%for(var i=0;i<category.length;i++) {%>
                            <option value="<%=category[i]%>"><%=category[i]%></option>
                         
                            <%}%>
                            <%}%>
                          </select>
                                              </div>
                                           
                    </div>
                <hr>
                <label for="description">Description*:</label>
                
                <div class="form-group">
                <textarea name="description" id="description" cols="60" rows="10" style="resize:none" required><%= description %></textarea>    
                </div>
                           
                <hr>
                <div class="form-group">
                    
                    <label for="price">Price*:</label>
                    <input id="price" name="price" class="experience form-control" pattern="[0-9]{1}" type="number" min="1"  placeholder="Enter Price" required >
                </div>
                <hr>
                <label for="Image">Food Item Picture*:</label>
               
                <div class="form-group mt-1">
                  <label for="image">File input</label>
                  <input type="file" name="image" class="form-control-file" required>
                  <small class="form-text text-muted" id="fileHelp"></small>
              </div>

                <input type="submit" value="Add Food Item" name="submit" class="btn btn-primary mt-2" >
               
            </form>
          </div>

     
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <footer class="sticky-footer bg-white">
        <div class="container my-auto">
          <div class="copyright text-center my-auto">
            <span>Copyright &copy;Karigary Admin Portal 2020</span>
          </div>
        </div>
      </footer>
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <%- include('partials/logoutmodal.ejs') %>

  <!-- Bootstrap core JavaScript-->
  <%- include('partials/footer.ejs') %>
 
</body>

</html>
