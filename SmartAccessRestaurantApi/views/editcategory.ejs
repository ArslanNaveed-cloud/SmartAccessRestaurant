<!DOCTYPE html>
<html lang="en">

  <%- include('partials/header.ejs') %>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    <%- include('partials/hotelsidebar.ejs') %>

    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <%- include('partials/navbar.ejs') %>

        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Category</h1>
            </div>

          <!-- Content Row -->
          <div class="container">
            <% if(shouldshowalert) { %>
                <div class="<%=alertClass %>" role="alert">
                     <%= message %>
                  </div>
              <% }else{
                
              } %>
            <form  action="/hotel/editcategory" method="POST" class="w-50">
               
                <div class="form-group">
                    <label for="id">Id*:</label>
                    <input type="text" name="id" id="title" class="form-control" value="<%= objectid %>" readonly>
                </div>
               
                <div class="form-group">
                    
                    <label for="title">Name*:</label>
                    <input type="text" name="name" id="name" class="form-control" value="<%= name %>" placeholder="Enter category name" required>
                </div><!-- ////////////////////1st field////////////-->
             
                <hr>
                <input type="submit" value="Update Category" name="submit" class="btn btn-primary mt-2" >
                <a href="/hotel"><input type="button" value="Cancel" class="btn btn-primary mt-2" >
                </a>

     
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <footer class="sticky-footer bg-white">
        <div class="container my-auto">
          <div class="copyright text-center my-auto">
            <span>Copyright &copy;Karigary Admin Portal 2020</span>
          </div>
        </div>
      </footer>
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <%- include('partials/logoutmodal.ejs') %>

  <!-- Bootstrap core JavaScript-->
  <%- include('partials/footer.ejs') %>
 
</body>

</html>
