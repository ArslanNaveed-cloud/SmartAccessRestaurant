<!DOCTYPE html>
<html lang="en">

  <%- include('partials/header.ejs') %>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    <%- include('partials/hotelsidebar.ejs') %>

    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <%- include('partials/navbar.ejs') %>

        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
            </div>

          <!-- Content Row -->
          <div class="row">

            <!-- Earnings (Monthly) Card Example -->
           
            <!-- Earnings (Monthly) Card Example -->
            <div class="col-xl-3 col-md-6 mb-4">
              <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                  <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                      <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Total Menu Items</div>
                      <div class="h5 mb-0 font-weight-bold text-gray-800"><%=fooditemlength%></div>
                    </div>
                    <div class="col-auto">
                      <i class="fas fa-users fa-2x text-gray-300"></i>
                    </div>
                   
                  </div>
                </div>
              </div>
            </div>
            <div class="col-xl-3 col-md-6 mb-4">
              <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                  <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                      <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Total Orders</div>
                      <div class="h5 mb-0 font-weight-bold text-gray-800"><%=orderlength%></div>
                    </div>
                    <div class="col-auto">
                      <i class="fas fa-users fa-2x text-gray-300"></i>
                    </div>
                   
                  </div>
                </div>
              </div>
            </div>
         
            <!-- Pending Requests Card Example -->
            <div class="col-xl-3 col-md-6 mb-4">
              <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                  <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                      <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Total Categories</div>
                      <div class="h5 mb-0 font-weight-bold text-gray-800"><%=categorylength%></div>  
                    </div>
                    <div class="col-auto">
                      <i class="fas fa-user-shield fa-2x text-gray-300"></i>
                    </div>
                   
                  </div>
                </div>
              </div>
            </div>
          </div>
          <h1 class="h3 mb-4 text-gray-800">New Orders</h1>
          <a href="/foodproducts/addnewfoodproduct" class="btn btn-primary btn-icon-split mb-3">
            <span class="icon text-white-50">
              <i class="fas fa-sync-alt"></i>
            </span>
            <span class="text">Refresh</span>
          </a>
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">New Orders</h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                     
                      <th>Id</th>
                      <th>Table Number</th>
                      <th>Order Details</th>
                     <th>Quantity</th>
                      <th>Total Bill</th>
                     
                      <th>Status</th>
                      <th>Print Bill</th>
                      
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                      <th>Id</th>
                      <th>Table Number</th>
                      <th>Order Details</th>
                       <th>Quantity</th>
                      <th>Total Bill</th>
                      
                      <th>Status</th>
                      <th>Print Bill</th>
                      
                     
                    </tr>
                  </tfoot>
                  <tbody>
                   
                    <%if(isneworder){%>
                      
                   <% for(i=0;i<orderid.length;i++){%>
                    <% console.log("Iteration"+i);%>
                    <tr>
                     
                      <th><%=i+1%></td>
                      <th><%=tablenumber[i]%></td>
                      <%foodnamearray = fooditems[i]%>
                     
                      <th><%for (a =0;a<foodnamearray.length;a++){%>
                        <ul>
                          <li><%=foodnamearray[a]%></li>
                         </ul>
                        <%}%>
                      </th>
                     
                      <%quantityjson =productquantity[i]%>
                    <th><%for (b =0;b<quantityjson.length;b++){%>
                        <ul>
                          <li><%=quantityjson[b]%></li>
                         </ul>
                        <%}%>
                      </th>
                      <th><%=totalbill[i]%></th>
                      <td>
                       <div class="btn-group">
                        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                          <%=status[i]%>
                        </button>
                        <div class="dropdown-menu">
                          <%if(status[i] ==="Done"){%>
                            <a class="dropdown-item" href="/hotel/preparestatus?id=<%=orderid[i]%>">Preparing</a>
                         
                            <%}else{%>
                              <a class="dropdown-item" href="/hotel/donestatus?id=<%=orderid[i]%>">Done</a>
                         
                              <%}%>
                              <a class="dropdown-item" href="/hotel/cancelorder?id=<%=orderid[i]%>">Cancel</a>
                         
                        </div>
                        <td><a href="/hotel/printbill?orderid=<%=orderid[i]%>"> <i class="fas fa-print"></i></a></td>
                       
                      
                      </div>
                    </td>
                                        </tr>
                   
                   <%}%>
                   <%}%>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
     
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <footer class="sticky-footer bg-white">
        <div class="container my-auto">
          <div class="copyright text-center my-auto">
            <span>Copyright &copy;Karigary Admin Portal 2020</span>
          </div>
        </div>
      </footer>
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <%- include('partials/logoutmodal.ejs') %>

  <!-- Bootstrap core JavaScript-->
  <%- include('partials/footer.ejs') %>
</body>

</html>
