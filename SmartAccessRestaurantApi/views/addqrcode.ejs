<!DOCTYPE html>
<html lang="en">

  <%- include('partials/header.ejs') %>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    <%- include('partials/hotelsidebar.ejs') %>

    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <%- include('partials/navbar.ejs') %>

        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">QR Codes</h1>
            </div>

          <!-- Content Row -->
          <div class="container">
            <% if(shouldShowAlert) { %>
                <div class="<%=alertClass %>" role="alert">
                     <%= message %>
                  </div>
              <% }else{
                
              } %>
            <form  action="/hotel/generateqrcode" method="POST" class="w-50">
               
               
               
                <div class="form-inline">
                    
                    <input id="from" name="from" class="experience form-control" pattern="[0-9]{1}" type="number" min="1"  placeholder="Starting Serial Number" required >
                    <input id="to" name="to" class="experience form-control" pattern="[0-9]{1}" type="number" min="1"  placeholder="Ending Serial Number" required >
                   
                 </div>
                   
              
                <input type="submit" value="Generate Qr Code" name="submit" class="btn btn-primary mt-2" >
               
            </form>
          </div>

     
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <footer class="sticky-footer bg-white">
        <div class="container my-auto">
          <div class="copyright text-center my-auto">
            <span>Copyright &copy;Karigary Admin Portal 2020</span>
          </div>
        </div>
      </footer>
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <%- include('partials/logoutmodal.ejs') %>

  <!-- Bootstrap core JavaScript-->
  <%- include('partials/footer.ejs') %>
 
</body>

</html>
